@model Solutions.Models.Chapter

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) |
    @Html.ActionLink("Back to Course", "Details", "Course", new { id = Model.CourseId }, null)
</p>

<h4>Posts for Chapter</h4>

@if (Request.IsAuthenticated)
{
    <h2>@Html.ActionLink("Create / Post Solution", "Create", "Post")</h2>
}
else
{
    <h2>List of Solutions:</h2>
}
<div class="row">

    <table class="table table-striped table-hover col-sm-12">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Language</th>
                <th>Author</th>
                <th>Verified</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>@post.Id</td>
                    <td><a href="@Html.DisplayFor(modelItem => post.Link)">@Html.DisplayFor(modelItem => post.Title)</a></td>
                    <td>@post.LanguageId</td>
                    <td>@post.Author.FullName</td>
                    <td>@post.Verified</td>
                    <td>
                        @Html.ActionLink("Edit", "Create", "Post", new { @id = post.Id }, null)
                        @Html.ActionLink("Delete", "Delete", "Post", new { @id = post.Id }, null)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>



