@model Solutions.Models.Chapter

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) |
    @Html.ActionLink("Back to Course", "Details", "Course", new { id = Model.CourseId }, null)
</p>

<h4>Posts for Chapter</h4>
@if (Model.Posts.Count > 0)
{
    <ul>
        @foreach (var post in Model.Posts)
        {
        <li>
            <article>
                <header>
                    <h2>
                        <a href="@Html.DisplayFor(modelItem => post.Link)">@Html.DisplayFor(modelItem => post.Title)</a>
                    </h2>
                </header>

                <footer class="pull-right">
                    <small class="author">
                        --author @post.Author.FullName
                    </small>
                </footer>
            </article>
        </li>
        }
    </ul>
}