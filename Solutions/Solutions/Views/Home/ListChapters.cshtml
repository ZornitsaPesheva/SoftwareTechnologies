@model List<Solutions.Models.Chapter>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        <h1>Chapters:</h1>
        @foreach (var chapter in Model)
        {
            <h2>
                @Html.ActionLink(string.Format($"{chapter.Title} ({chapter.Posts.Count})"),
                        "ListPosts", "Home", new { @chapterId = chapter.Id }, null)
            </h2>

        }
    </div>
</div>
<hr />