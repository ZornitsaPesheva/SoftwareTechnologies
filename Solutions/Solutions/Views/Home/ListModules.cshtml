@model List<Solutions.Models.Module>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        
        <table class="table table-hover" style="margin-top:100px">
            @foreach (var module in Model)
            {
                <tr>
                    <td>
                        <h1>
                            <!-- изтрих ({module.Courses.Count})-->
                            @Html.ActionLink(string.Format($"{module.Name} "),
                        "ListCourses", "Home", new { @moduleId = module.Id }, new { @style = "text-decoration:none;" })
                        </h1>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<hr />