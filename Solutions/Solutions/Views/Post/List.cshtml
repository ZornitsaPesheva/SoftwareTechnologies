@model List<Solutions.Models.Post>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        @foreach (var post in Model)
        {

                <article>
                    <header>
                        <h2>
                            <a href="@Html.DisplayFor(modelItem => post.Link)">@Html.DisplayFor(modelItem => post.Title)</a> 
                        </h2>
                    </header>

                    <footer class="pull-right">
                        <small class="author">
                            --author @post.Author.FullName
                        </small>
                    </footer>
                </article>

        }
    </div>
</div>
<hr />